import 'package:flutter/material.dart';

class CommentPage extends StatefulWidget {
  final String movieTitle;

  CommentPage({Key? key, required this.movieTitle}) : super(key: key);

  @override
  _CommentPageState createState() => _CommentPageState();
}

class _CommentPageState extends State<CommentPage> {
  final _formKey = GlobalKey<FormState>();
  final _controller = TextEditingController();

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('${widget.movieTitle} için Yorum Yap'),
      ),
      body: Form(
        key: _formKey,
        child: Column(
          children: <Widget>[
            TextFormField(
              controller: _controller,
              decoration: InputDecoration(labelText: 'Yorumunuz'),
              validator: (value) {
                if (value == null || value.isEmpty) {
                  return 'Lütfen bir yorum girin';
                }
                return null;
              },
            ),
            ElevatedButton(
              onPressed: () {
                if (_formKey.currentState!.validate()) {
                  ScaffoldMessenger.of(context).showSnackBar(
                    SnackBar(content: Text('Yorumunuz Kaydedildi')),
                  );
                }
              },
              child: Text('Gönder'),
            ),
          ],
        ),
      ),
    );
  }
}

